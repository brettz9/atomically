    "write",
    "file",
    "reliable"
  ],
  "engines": {
    "node": ">=12.12.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^12.7.2",
    "mkdirp": "^1.0.4",
    "require-inject": "^1.4.4",
    "rimraf": "^3.0.2",
    "tap": "^14.10.7",
